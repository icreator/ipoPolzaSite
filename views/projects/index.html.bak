{{extend 'layout.html'}}

{{=H4(T('Польза для бизнеса от участия в нашем инновационном потребительском обществе:'))}}
{{=DIV(CAT(UL(
    T('Мы подарим Вашему бизнесу новых клиентов - тысячи из России и сотни тысяч со всего мира! Достаточно установить на свой сайт наш биллинг для оплаты крипто-имуществом. При этом Вам будут поступать рубли, евро или доллары, как как будто ваш сайт продает за рубли обычным образом. Установка биллинга бесплатна.'),
    T('Мы предоставим Вам международную "цифровую наличность" - без ограничений и контроля. Платить можно во всем мире без контроля со стороны ЦБ или государства'),
    T('Налоговая оптимизация - внутренние дела общества не подлежат обложению, поэтому внутри общества можно продавать свои товары и услуги без налогов. Для этого Вам нужно всего лишь стать пайщиком общества.'),
    )),
_id='firm', _class='_')}}
{{=H4(T('Так же Мы предлагаем наши проекты для бизнеса:'))}}

{{for r in t:}}
<div class='gray1'>
    {{=H3('%s "%s"' % (T('Проект'), T(r.name)))}}
    {{=DIV(XML(r.info))}}
    <br>
    {{=CAT(
    T('Статус:'),B(r.status or T('в разработке')),BR(),
    T('URL:'),B(r.url and A(_href=r.url, _target='_blank') or T('нет')),
    )}}
</div>
{{pass}}
